  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "chai": "^4.1.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.0.0-rc.15",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3"
  }
}
